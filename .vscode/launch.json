{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run current test file",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--loader", "tsx", "--test", "${file}"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run current test file with --test-only",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--loader", "tsx", "--test-only", "${file}"]
    }
  ]
}
